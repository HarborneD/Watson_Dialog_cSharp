@model Watson_Dialog.Helpers.watson_dialog_dialog

@{
    ViewBag.Title = "Delete Dialog";
}

<h2>Delete Dialog</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dialog - @{Write(Model.name); } - @{Write(Model.dialog_id);}</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.dialog_id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Dialogs")
        </div>
    }
</div>