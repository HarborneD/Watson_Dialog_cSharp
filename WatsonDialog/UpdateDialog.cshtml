@model Watson_Dialog.Helpers.watson_dialog_dialog

@{
    ViewBag.Title = "Update Dialog";
}

<h2>Update Dialog</h2>

@using (Html.BeginForm("UpdateDialog", "WatsonDialog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dialog - @{Write(Model.name); } - @{Write(Model.dialog_id);}</h4>
        <hr />
        @Html.HiddenFor(model => model.name)
        @Html.HiddenFor(model => model.dialog_id)

        <div class="form-group">
            <label class="control-label col-md-2" >Dialog XML</label>
            <div class="col-md-10">
                <div class="col-md-10">
                    <input type="file" name="XML" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Dialogs")
</div>
